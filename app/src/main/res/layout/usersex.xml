<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bj_layout"
    android:visibility="gone"
    android:background="@drawable/bj"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/sex_nan1"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_74"
        android:src="@mipmap/nan" />


    <ImageView
        android:id="@+id/sex_nv"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_120"
        android:layout_marginLeft="@dimen/dp_254"
        android:src="@mipmap/nv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="#ff333333"
        android:layout_marginLeft="@dimen/dp_78"
        android:layout_marginBottom="@dimen/dp_100"
        android:text="男" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="#ff333333"
        android:layout_marginLeft="@dimen/dp_258"
        android:layout_marginBottom="@dimen/dp_100"
        android:text="女" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_3"
        android:background="@drawable/text"
        android:layout_alignParentBottom="true"
        android:text="取消"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ff333333"
        android:layout_height="@dimen/dp_55" />



</RelativeLayout>