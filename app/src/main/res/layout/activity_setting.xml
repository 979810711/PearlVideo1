<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:background="#F2F2F2"
    android:layout_height="match_parent"
    tools:context="yjh.com.cn.pearlvideo.activity.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/isRelative"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:id="@+id/fh"
            android:src="@mipmap/fh"
            android:layout_height="@dimen/dp_24" />
        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            android:textSize="18sp"
            android:id="@+id/settings"
            android:textColor="#ff000000"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/t1"
        android:layout_below="@id/isRelative"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_103">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/smrz"
            android:id="@+id/smrz"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_below="@+id/smrz"
            android:layout_height="1dp"
            android:id="@+id/textView2" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/xgmm"
            android:id="@+id/xgmm"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/t1"
        android:id="@+id/t2"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_103">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/yhxy"
            android:id="@+id/yhxy"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_below="@+id/yhxy"
            android:layout_height="1dp"
            android:id="@+id/textView3" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/yszc"
            android:id="@+id/yszc"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3" />

    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/t2"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="@dimen/dp_154">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/qlhc"
            android:id="@+id/qlhc"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/cache"
            android:text="221M"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="#ff666666"
            android:textSize="15sp"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_below="@+id/qlhc"
            android:layout_height="1dp"
            android:id="@+id/textView4" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/gywm"
            android:id="@+id/gywm"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4" />

        <TextView
            android:layout_width="match_parent"
            android:background="#DDDDDD"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_below="@+id/gywm"
            android:layout_height="1dp"
            android:id="@+id/textView5" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/tcdl"
            android:id="@+id/tcdl"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5" />



    </RelativeLayout>





</RelativeLayout>
