<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/focus_plays"
    android:background="@drawable/bjs"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yjh.com.cn.pearlvideo.activity.FocusPlayActivity">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_27"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/chats"
            android:layout_width="wrap_content"
            android:src="@mipmap/lts"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:text="1221"
            android:id="@+id/number_size"
            android:textColor="#ffcfcfcf"
            android:textSize="11sp"
            android:layout_height="wrap_content" />



        <ImageView
            android:layout_width="@dimen/dp_24"
            android:src="@mipmap/ax"
            android:id="@+id/love"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_height="@dimen/dp_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/zf1"
            android:id="@+id/fx_img"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/jb"
            android:id="@+id/report"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/t"
        android:layout_marginTop="@dimen/dp_300"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="@dimen/dp_47"
        android:layout_marginLeft="@dimen/dp_9"
        android:src="@drawable/mei"
        android:id="@+id/head"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_below="@+id/t"
        android:layout_height="@dimen/dp_47" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:text="我的名字"
        android:layout_toRightOf="@+id/head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_108"
        android:layout_below="@+id/t"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="星空耀眼。。。"
        android:layout_marginLeft="@dimen/dp_9"
        android:textColor="#ffffffff"
        android:textSize="17sp"
        android:id="@+id/explain"
        android:layout_marginTop="@dimen/dp_145"
        android:layout_below="@+id/t"
        android:layout_height="wrap_content" />

    <ImageButton
        android:layout_width="wrap_content"
        android:id="@+id/focus"

        android:layout_toRightOf="@+id/name"
        android:layout_marginLeft="@dimen/dp_10"
        android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/dp_105"
        android:layout_below="@+id/t"
        android:src="@mipmap/gzuser"
        android:layout_height="wrap_content" />

    <FrameLayout

        android:layout_width="match_parent"
        android:id="@+id/fragment_layout"
        android:layout_height="match_parent">
    </FrameLayout>



    <include layout="@layout/sharelyout"/>
    <include layout="@layout/user_comment"/>

</RelativeLayout>
