<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout1"
    android:background="#F2F2F2"
    android:fitsSystemWindows="true"
    android:descendantFocusability="blocksDescendants"
    tools:context="yjh.com.cn.pearlvideo.Frgment.MyFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/hello"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/textback"
        android:layout_height="@dimen/dp_227">


        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/pyq"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_61"
            android:src="@mipmap/pyq"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="朋友圈"
            android:layout_marginLeft="@dimen/dp_67"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/wx"
            android:id="@+id/wx"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_130"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="微信"
            android:layout_marginLeft="@dimen/dp_136"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="wrap_content" />


        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:src="@mipmap/qq"
            android:id="@+id/qq"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_199"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="QQ"
            android:layout_marginLeft="@dimen/dp_210"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/wb"
            android:id="@+id/wb"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_43"
            android:layout_marginLeft="@dimen/dp_268"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="微博"
            android:layout_marginLeft="@dimen/dp_279"
            android:layout_marginTop="@dimen/dp_100"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:text="取消"
            android:background="@android:color/white"
            android:gravity="center"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_55"
            android:id="@+id/cancel"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        android:layout_below="@+id/hello"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/isRelative"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_31"
                    android:background="@mipmap/sz" />

                <ImageView
                    android:id="@+id/lt_img"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_284"
                    android:layout_marginTop="@dimen/dp_31"
                    android:background="@mipmap/lt" />

                <ImageView
                    android:id="@+id/zf_img"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_325"
                    android:layout_marginTop="@dimen/dp_31"
                    android:background="@mipmap/zf" />


                <ImageView

                    android:id="@+id/tx_img"
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_110"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_89" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_143"
                    android:layout_marginTop="@dimen/dp_91"
                    android:ellipsize="end"
                    android:maxHeight="@dimen/dp_6"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:text="你好你好你好as"
                    android:textColor="#ff000000"
                    android:textSize="24sp" />

                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_91"
                    android:layout_toRightOf="@+id/name"
                    android:background="@mipmap/nv" />


                <ImageView
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_138"
                    android:layout_marginTop="@dimen/dp_126"
                    android:background="@mipmap/dw" />

                <TextView
                    android:id="@+id/site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_159"
                    android:layout_marginTop="@dimen/dp_131"
                    android:text="中国"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_19"
                    android:layout_marginLeft="@dimen/dp_199"
                    android:layout_marginTop="@dimen/dp_128"
                    android:background="@drawable/age"
                    android:gravity="center"
                    android:text="23岁"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/letter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_143"
                    android:layout_marginTop="@dimen/dp_157"
                    android:ellipsize="end"
                    android:maxLength="32"
                    android:text="个人说明个人说明"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/number_1"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_262"
                    android:text="1"
                    android:singleLine="true"
                    android:textColor="#ff333333"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/number_2"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_262"
                    android:text="0"
                    android:textColor="#ff333333"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/number_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_220"
                    android:layout_marginTop="@dimen/dp_262"
                    android:text="178121"
                    android:textColor="#ff333333"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_286"
                    android:text="关注"
                    android:textColor="#ffdddddd"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_120"
                    android:layout_marginTop="@dimen/dp_286"
                    android:text="粉丝"
                    android:textColor="#ffdddddd"
                    android:textSize="15sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_220"
                    android:layout_marginTop="@dimen/dp_286"
                    android:text="获赞"
                    android:textColor="#ffdddddd"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/letter"
                    android:layout_marginLeft="@dimen/dp_143"
                    android:layout_marginTop="@dimen/dp_11"
                    android:background="@mipmap/yq" />

                <TextView
                    android:layout_width="@dimen/dp_43"
                    android:layout_height="@dimen/dp_31"
                    android:layout_below="@+id/letter"
                    android:layout_marginLeft="@dimen/dp_235"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/text"
                    android:gravity="center"
                    android:text="团队"
                    android:id="@+id/team"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:layout_width="@dimen/dp_43"
                    android:layout_marginLeft="@dimen/dp_288"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_below="@+id/letter"
                    android:id="@+id/compileLayout"
                    android:background="@drawable/text"
                    android:layout_height="@dimen/dp_31">

                    <ImageView
                        android:layout_width="@dimen/dp_22"
                        android:background="@mipmap/bjs"
                        android:id="@+id/editor"
                        android:layout_centerInParent="true"
                        android:layout_height="@dimen/dp_22" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/reLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView"
                    android:background="@mipmap/bj">


                    <TextView
                        android:id="@+id/zp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_71"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="12个作品"
                        android:textColor="#ff333333"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/t1"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_71"
                        android:layout_marginTop="@dimen/dp_57"
                        android:background="@drawable/shape" />


                    <TextView
                        android:id="@+id/xh_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_254"
                        android:layout_marginTop="@dimen/dp_30"
                        android:text="122喜欢"
                        android:textColor="#666666"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/t2"
                        android:layout_width="@dimen/dp_44"
                        android:layout_height="@dimen/dp_2"
                        android:layout_marginLeft="@dimen/dp_254"
                        android:layout_marginTop="@dimen/dp_57"
                        android:background="@drawable/shape"
                        android:visibility="gone" />
                </RelativeLayout>


                <ImageView
                    android:layout_marginTop="@dimen/dp_120"
                    android:src="@mipmap/yzs"
                    android:id="@+id/nowork"
                    android:layout_centerInParent="true"
                    android:layout_below="@id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/nowork"
                    android:id="@+id/hinttext"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="还没有任何作品哦"
                    android:layout_height="wrap_content" />


                <yjh.com.cn.pearlvideo.Utlis.CustomViewPager
                    android:id="@+id/mypager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/textView"
                    android:layout_marginTop="@dimen/dp_60" />

            </RelativeLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
