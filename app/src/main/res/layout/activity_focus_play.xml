<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_focus_play"
    android:background="@drawable/bjs"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yjh.com.cn.pearlvideo.activity.FocusPlayActivity">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:src="@mipmap/fh"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:src="@mipmap/ax"
            android:id="@+id/love"
            android:layout_marginLeft="@dimen/dp_57"
            android:layout_height="@dimen/dp_24" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:id="@+id/number_size"
            android:text="111"
            android:layout_marginLeft="@dimen/dp_91"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/zf1"
            android:id="@+id/fx_img"
            android:layout_marginLeft="@dimen/dp_139"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:src="@mipmap/jb"
            android:id="@+id/report"
            android:layout_marginLeft="@dimen/dp_185"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ImageView
        android:layout_width="@dimen/dp_47"
        android:layout_marginBottom="@dimen/dp_124"
        android:layout_marginLeft="@dimen/dp_9"
        android:src="@drawable/mei"
        android:id="@+id/head"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/dp_47" />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:text="我的名字"
        android:layout_toRightOf="@+id/head"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffffff"
        android:textSize="15sp"
        android:layout_marginBottom="@dimen/dp_133"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="星空耀眼。。。"
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:id="@+id/explain"
        android:layout_marginBottom="@dimen/dp_95"
        android:layout_height="wrap_content" />

    <FrameLayout

        android:layout_width="match_parent"
        android:id="@+id/fragment1_layout"
        android:layout_height="match_parent">
    </FrameLayout>


    <include layout="@layout/sharelyout"/>

</RelativeLayout>
