<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/tem"
        android:id="@+id/bj_layout"
        android:layout_width="@dimen/dp_186"
        android:layout_height="@dimen/dp_298">

        <TextView
            android:layout_width="wrap_content"
            android:text="视频名称"
            android:id="@+id/sname"
            android:maxLength="18"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_223"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:src="@drawable/mei"
            android:id="@+id/head"
            android:layout_marginTop="@dimen/dp_260"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_height="@dimen/dp_30" />

        <ImageView
            android:layout_marginTop="@dimen/dp_263"
            android:layout_width="@dimen/dp_16"
            android:id="@+id/love"
            android:src="@mipmap/ax"
            android:layout_marginLeft="@dimen/dp_115"
            android:layout_height="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dp_263"
            android:layout_marginLeft="@dimen/dp_133"
            android:text="11111"
            android:singleLine="true"
            android:id="@+id/number_size"
            android:textColor="#ffffffff"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_3"
            android:textColor="#ffffffff"
            android:layout_height="match_parent" />

    </RelativeLayout>


</RelativeLayout>