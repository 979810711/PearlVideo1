<?xml version="1.0" encoding="utf-8"?>
<yjh.com.cn.pearlvideo.PullToRefresh.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/f1"
    android:background="#F2F2F2"
    android:layout_height="match_parent">

    <include layout="@layout/refresh_head" />

    <yjh.com.cn.pearlvideo.PullToRefresh.PullableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/allRecyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </yjh.com.cn.pearlvideo.PullToRefresh.PullableScrollView>

    <include layout="@layout/load_more" />

</yjh.com.cn.pearlvideo.PullToRefresh.PullToRefreshLayout>