<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="yjh.com.cn.pearlvideo.activity.MessageActivity">

    <RelativeLayout
        android:id="@+id/isRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@mipmap/fh" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ff000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:id="@+id/whiteBack"
        android:layout_height="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_30">

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            app:tabIndicatorColor="#ffe11379"
            app:tabGravity="fill"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#ffe11379"
            app:tabTextColor="#ff333333"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>




    <android.support.v4.view.ViewPager
        android:id="@+id/messageViewPager"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="match_parent"
        android:layout_below="@+id/whiteBack"
        android:layout_height="match_parent"/>

</RelativeLayout>
